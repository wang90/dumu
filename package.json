{
  "name": "location-note",
  "version": "0.0.0",
  "main": "electron/main.js",
  "scripts": {
    "dev:web": "vite --host 127.0.0.1 --port 5173 --strictPort",
    "rebuild:native": "electron-rebuild -f -w better-sqlite3",
    "dev:desktop": "npm run rebuild:native && wait-on tcp:5173 && cross-env VITE_DEV_SERVER_URL=http://127.0.0.1:5173 electron .",
    "dev": "concurrently -k \"npm run dev:web\" \"npm run dev:desktop\"",
    "build:web": "vite build",
    "build": "npm run build:web",
    "preview": "vite preview",
    "start": "electron ."
  },
  "dependencies": {
    "better-sqlite3": "^11.8.1",
    "react": "^18.3.1",
    "react-dom": "^18.3.1"
  },
  "devDependencies": {
    "@vitejs/plugin-react": "^4.4.1",
    "concurrently": "^9.1.2",
    "cross-env": "^7.0.3",
    "electron-rebuild": "^3.2.9",
    "electron": "^34.0.2",
    "vite": "^6.1.1",
    "wait-on": "^8.0.3"
  }
}
